{% extends 'AppBundle::base.html.twig' %} {% block content %}

<div class="row">
    <div class="col-md-12">
        <h1>Test page</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-9">
        {% for post in posts %}
        <div class="col-md-12">
            <h3> {{ post.title }} </h3>
            <p><small> {{ post.category.name }} </small></p>
            <p> {{ post.body }}</p>
        </div>
        {% endfor %}

    </div>
    <div class="col-md-3">
        <h3>Category list</h3>
        <ul>
            {% for category in categories %}
            <li>{{ category.name }}</li>
            {% endfor %}
        </ul>
    </div>

</div>

{% endblock %}